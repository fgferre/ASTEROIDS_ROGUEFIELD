{
  "name": "asteroids_roguefield",
  "version": "1.0.0",
  "description": "Jogo Roguelike inspirado nas mec√¢nicas de Asteroids",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "dev": "vite",
    "build": "grunt build",
    "test": "vitest run",
    "test:baseline": "vitest run tests/balance/asteroid-metrics/*.test.js tests/integration/wavemanager/feature-flags.test.js",
    "test:baseline:watch": "vitest watch tests/balance/asteroid-metrics/*.test.js tests/integration/wavemanager/feature-flags.test.js",
    "test:mixed-enemies": "vitest run src/__tests__/integration/mixed-enemy-waves.test.js",
    "test:mixed-enemies:watch": "vitest watch src/__tests__/integration/mixed-enemy-waves.test.js",
    "test:visual-enemies": "echo 'Abra http://localhost:5173/scripts/visual-enemy-rendering-test.html no navegador' && npm run dev",
    "stress": "node scripts/run-stress-checks.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze:deps": "node scripts/analyze-dependencies.js && node scripts/generate-mermaid-graph.js",
    "analyze:deps:watch": "nodemon --watch src --exec npm run analyze:deps",
    "validate:deps": "node scripts/analyze-dependencies.js --validate-only",
    "test:benchmark": "node scripts/benchmark-tests.js",
    "test:validate-optimizations": "node scripts/validate-test-optimizations.js"
  },
  "devDependencies": {
    "grunt": "^1.6.1",
    "grunt-cli": "^1.5.0",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "nodemon": "^3.1.10",
    "prettier": "3.2.5",
    "vite": "^5.2.11",
    "vitest": "^3.2.4"
  }
}

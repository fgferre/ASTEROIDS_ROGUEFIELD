{
  "name": "asteroids_roguefield",
  "version": "1.0.0",
  "description": "Jogo Roguelike inspirado nas mec√¢nicas de Asteroids",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:core": "vitest run tests/core",
    "test:modules": "vitest run tests/modules",
    "test:utils": "vitest run tests/utils",
    "test:services": "vitest run tests/services",
    "test:integration": "vitest run tests/integration",
    "test:balance": "vitest run tests/balance",
    "test:visual": "vitest run tests/visual",
    "test:physics": "vitest run tests/physics",
    "test:visual-enemies": "echo 'Abra http://localhost:5173/scripts/visual-enemy-rendering-test.html no navegador' && npm run dev",
    "stress": "node scripts/run-stress-checks.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze:deps": "node scripts/analyze-dependencies.js && node scripts/generate-mermaid-graph.js",
    "analyze:deps:watch": "nodemon --watch src --exec npm run analyze:deps",
    "validate:deps": "node scripts/analyze-dependencies.js --validate-only",
    "test:benchmark": "node scripts/benchmark-tests.js",
    "test:validate-optimizations": "node scripts/validate-test-optimizations.js"
  },
  "devDependencies": {
    "grunt": "^1.6.1",
    "grunt-cli": "^1.5.0",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "nodemon": "^3.1.10",
    "prettier": "3.2.5",
    "vite": "^5.2.11",
    "vitest": "^3.2.4"
  }
}
